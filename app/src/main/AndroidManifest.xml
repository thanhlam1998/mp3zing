<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.mp3musicapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_mp3"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_mp3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.PlayMusicActivity"></activity>
        <activity android:name=".Activity.AllAlbumListActivity" />
        <activity android:name=".Activity.CategoryByTopicActivity" />
        <activity android:name=".Activity.AllTopicActivity" />
        <activity android:name=".Activity.AllPlayListActivity" />
        <activity android:name=".Activity.MusicListActivity" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>